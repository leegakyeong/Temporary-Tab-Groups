{
  "name": "Temporary Tab Groups",
  "version": "1.0",
  "description": "",
  "permissions": ["declarativeContent", "storage", "tabs"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/Temporary Tab Groups_16.png",
      "32": "images/Temporary Tab Groups_32.png",
      "48": "images/Temporary Tab Groups_48.png",
      "128": "images/Temporary Tab Groups_128.png"
    }
  },
  "icons": {
    "16": "images/Temporary Tab Groups_16.png",
    "32": "images/Temporary Tab Groups_32.png",
    "48": "images/Temporary Tab Groups_48.png",
    "128": "images/Temporary Tab Groups_128.png"
  },
  "commands": {
    "addTab": {
      "suggested_key": {
        "default": "Ctrl+Shift+S"
      },
      "description": "Save current tab without clicking the button in the popup."
    }
  },
  "manifest_version": 2
}
